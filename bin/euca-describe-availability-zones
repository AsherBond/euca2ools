import getopt, sys, os
from euca2ools import Euca2ool, Util

usage_string = """
DESCRIPTION
    Shows information about availability zones.

USAGE
    euca-describe-availability-zones [-h, --help] [--version] [--debug] 
 	[zone1 zone2...zoneN]

    Where
	zone1 zone2...zoneN - zones to describe. 
"""

version_string = """    euca-describe-availability-zones version: 1.0 (BSD)"""

def usage():
    print usage_string
    Util().usage()

def version():
    print version_string
    sys.exit()

def display_zones(zones, zone_ids):
    check_zone_ids = False
    if(len(zone_ids) > 0) and (not 'verbose' in zone_ids):
	check_zone_ids = True
    for zone in zones:
	if check_zone_ids:
	    if not zone.name in zone_ids:
	        continue
        zone_string = '%s\t%s' % (zone.name, zone.state)
	print 'AVAILABILITYZONE\t%s' % (zone_string)

def main():
    euca = None
    try:
        euca = Euca2ool() 
    except Exception, e:
	print e
        usage()
    for name, value in euca.opts:
        if name in ('-h', '--help'):
            usage()
	elif name == '--version':
	    version()

    debug = False

   
    zone_ids = euca.process_args()
    euca_conn = euca.make_connection()
    if 'verbose' in zone_ids:
	zones = euca_conn.get_all_zones('verbose')
    else:
        zones = euca_conn.get_all_zones()
    display_zones(zones, zone_ids)
if __name__ == "__main__":
    main()
 
