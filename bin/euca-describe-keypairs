import getopt, sys, os
from euca2ools import Euca2ool, ValidationError, Util

usage_string = """
DESCRIPTION
    Shows information about keypairs.

USAGE
    euca-describe-keypairs [-h, --help] [--version] [--debug]
	[keypair1 keypair2...keypairN] 

    Where
	keypair1 keypair2...keypairN - keypairs to describe. 
"""

version_string = """    euca-describe-key-pairs version: 1.0 (BSD)"""

def usage():
    print usage_string
    Util().usage()

def version():
    print version_string
    sys.exit()

def display_keypairs(keypairs, keypair_ids):
    check_keypair_ids = False
    if(len(keypair_ids) > 0):
	check_keypair_ids = True
    for keypair in keypairs:
	if check_keypair_ids:
	    if not keypair.name in keypair_ids:
	        continue
        keypair_string = '%s\t%s' % (keypair.name, keypair.fingerprint)
	print 'KEYPAIR\t%s' % (keypair_string)

def main():
    euca = None
    try:
    	euca = Euca2ool()
    except:
        usage()
 

    for name, value in euca.opts:
        if name in ('-h', '--help'):
            usage()
	elif name == '--version':
	    version()
    
    keypair_ids = euca.process_args()
    euca_conn = euca.make_connection()
    keypairs = euca_conn.get_all_key_pairs()
    display_keypairs(keypairs, keypair_ids)
if __name__ == "__main__":
    main()
 
