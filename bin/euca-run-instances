import getopt, sys, os
import boto

usage_string = """
DESCRIPTION
    Starts instances.

USAGE
    euca-run-instances [-B | --block-device-mappings mappings] [-n | --instance-count count] 
          [-g | --group group_name] [-k | --keypair keyname] [-d | --user-data data] 
	  [--addressing addressing] [-t | --instance-type instance_type] [-z | --availability-zone zone] 
	  [--kernel kernel_id] [--ramdisk ramdisk_id] image_id 
	  [-h, --help] [--version] [--debug]

    Where
	image_id - identifier for the image to run. 
	-h, --help - Display this help message.
	--version - Display the version of this tool.
        --debug - Turn on debugging.
"""

version_string = """    euca-run-instances version: 1.0 (BSD)"""

def usage():
    print usage_string
    sys.exit()

def version():
    print version_string
    sys.exit()

def process_args(args):
    instance_ids = []
    for arg in args:
        instance_ids.append(arg)
    return instance_ids 

def parse_url(url):
    host = None
    port = None
    service_path = None
    url = url.replace('http://', '')
    url_parts = url.split(':')
    if (len(url_parts) > 1):
        host = url_parts[0]
        path_parts = url_parts[1].split('/', 1)
	if (len(path_parts) > 1):
	    port = int(path_parts[0])
	    service_path = path_parts[1]
    return host, port, service_path	
  
def display_reservations(reservation):
    reservation_string = '%s\t%s' % (reservation.id, reservation.owner_id)
    group_delim = '\t'
    for group in reservation.groups:
	reservation_string += '%s%s' % (group_delim, group.id)
	group_delim = ', '
    print 'RESERVATION\t%s' % (reservation_string) 
    for instance in reservation.instances:
	instance_string = '%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s\t%s' % (instance.id, instance.image_id, instance.public_dns_name, instance.private_dns_name, instance.state, instance.key_name, instance.launch_time, instance.kernel, instance.ramdisk)
	print 'INSTANCE\t%s' % (instance_string)

def main():
    try:
        opts, args = getopt.getopt(sys.argv[1:], 'hk:n:t:g:d:z:',
                                   ['key=', 'kernel=', 'ramdisk=', 'instance-count=', 'instance_type=', 
				    'group=', 'user-data=', 'addressing=', 'availability-zone=',
				    'help', 'version', 'debug'])
    except:
        usage()
 
    debug = False
    image_id = None
    keyname = None
    kernel_id = None
    ramdisk_id = None
    min_count = 1
    max_count = 1
    instance_type = 'm1.small' 
    group_names = [] 
    user_data = None
    addressing_type = None
    zone = None
    ec2_user_access_key = None
    ec2_user_secret_key = None 
    default_ec2_url = 'http://localhost:8773/services/Eucalyptus'
    for name, value in opts:
        if name in ('-k', '--key'):
	    keyname = value
	elif name in ('--kernel'):
	    kernel_id = value
	elif name in ('--ramdisk'):
	    ramdisk_id = value
	elif name in ('-n', '--instance-count'):
	    counts = value.split('-')
	    if (len(counts) > 1):
		min_count = int(counts[0])
		max_count = int(counts[1])
	    else:
		min_count = max_count = int(counts[0])
	elif name in ('-t', '--instance-type'):
	    instance_type = value
	elif name in ('-g', '--group'):
	    group_names.append(value)
	elif name in ('-d', '--user-data'):
	    user_data = value
	elif name in ('--addressing'):
	    addressing_type = value
	elif name in ('-z', '--availability-zone'):
	     zone = value
        elif name in ('-h', '--help'):
            usage()
	elif name in ('--version'):
	    version()
	elif name in ('--debug'):
	    debug = True
    
    ec2_user_access_key = os.getenv('EC2_ACCESS_KEY')
    if not ec2_user_access_key:
        print 'EC2_ACCESS_KEY environment variable must be set.'
	usage()
 
    ec2_user_secret_key = os.getenv('EC2_SECRET_KEY')
    if not ec2_user_secret_key:
        print 'EC2_SECRET_KEY environment variable must be set.'
	usage()

    ec2_url = os.getenv('EC2_URL')
    if not ec2_url:
	ec2_url = default_ec2_url

    for arg in args:
	image_id = arg
	break

    host, port, service = parse_url(ec2_url)
    ec2_conn = boto.connect_ec2(aws_access_key_id=ec2_user_access_key, 
			        aws_secret_access_key=ec2_user_secret_key,
				is_secure=False,
				host=host,
				port=port,
				service=service)
    if image_id:
        reservation = ec2_conn.run_instances(image_id = image_id,
					      min_count = min_count,
					      max_count = max_count,
					      key_name = keyname,
					      security_groups = group_names,
					      user_data = user_data,
					      addressing_type = addressing_type,
					      instance_type = instance_type,
					      placement = zone,
					      kernel_id = kernel_id,
					      ramdisk_id = ramdisk_id)
        display_reservations(reservation)
    else:
	print 'image_id must be specified'
	usage()

if __name__ == "__main__":
    main()
 
