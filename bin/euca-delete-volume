import getopt, sys, os
import euca_tool

usage_string = """
DESCRIPTION
    Deletes a volume.

USAGE
    euca-delete-volume volume_id
	  [-h, --help] [--version] [--debug]

    Where
	volume_id - unique identifier for the volume to be deleted.
"""

version_string = """    euca-delete-volume version: 1.0 (BSD)"""

def usage():
    print usage_string
    euca_tool.usage()

def version():
    print version_string
    sys.exit()

  
def main():
    euca = None
    try:
  	euca = euca_tool.EucaTool()
    except:
        usage()
 
    volume_id = None

    for name, value in euca.opts:
        if name in ('-h', '--help'):
            usage()
	elif name in ('--version'):
	    version()
    
    for arg in euca.args:
	volume_id = arg
	break

    ec2_conn = euca.make_connection()

    if volume_id:
	return_code = ec2_conn.delete_volume(volume_id)
	if return_code:
	    print 'VOLUME\t%s' % (volume_id)
    else:
    	print 'volume_id must be specified'
	usage()
if __name__ == "__main__":
    main()
 
