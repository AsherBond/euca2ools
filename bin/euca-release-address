import getopt, sys, os
import euca_tools

usage_string = """
DESCRIPTION
    Releases a public IP address.

USAGE
    euca-release-address ip 
    [-h, --help] [--version] [--debug]

    Where
	ip - the public IP address to release.
"""

version_string = """    euca-release-address version: 1.0 (BSD)"""

def usage():
    print usage_string
    euca_tools.usage()

def version():
    print version_string
    sys.exit()

def main():
    euca = None
    try:
	euca = euca_tools.EucaTool()
    except:
        usage()
 
    ip = None

    for name, value in euca.opts:
        if name in ('-h', '--help'):
            usage()
	elif name in ('--version'):
	    version()

    for arg in euca.args:
	ip = arg
	break

    ec2_conn = euca.make_connection()

    if ip:
        return_code = ec2_conn.release_address(ip)
	if return_code:
	    print 'ADDRESS\t%s' % (ip)
    else:
	print 'ip address must be specified'
	usage()
if __name__ == "__main__":
    main()
 
