import getopt, sys, os
from euca_tools import EucaTool, ValidationError, Util, Util

usage_string = """
DESCRIPTION
    Associate a public IP address with an instance.

USAGE
    euca-associate-address -i, --instance instance_id
	  [-h, --help] [--version] [--debug] ip

    Where
	ip - address to associate. 
	instance_id - unique identifier for a running instance to associate the address with.
"""

version_string = """    euca-associate-address version: 1.0 (BSD)"""

def usage():
    print usage_string
    Util.usage()

def version():
    print version_string
    sys.exit()

def main():
    euca = None
    try:
        euca = EucaTool('i:', ['instance='])
    except:
        usage()
 
    ip = None
    instance_id = None

    for name, value in euca.opts:
        if name in ('-i', '--instance'):
            instance_id = value
        elif name in ('-h', '--help'):
            usage()
	elif name in ('--version'):
	    version()
    
    euca_conn = euca.make_connection()

    for arg in euca.args:
        ip = arg
	break

    if ip and instance_id:
        try:
            euca.validate_address(ip)
	    euca.validate_instance_id(instance_id)
        except ValidationError as error:
   	    print error.message
            sys.exit(1)

        return_code = euca_conn.associate_address(instance_id = instance_id,
						 public_ip = ip)
	if return_code:
	    print 'ADDRESS\t%s\t%s' % (ip, instance_id)
    else:
	print 'ip and instance_id must be specified'
	usage()

if __name__ == "__main__":
    main()
 
